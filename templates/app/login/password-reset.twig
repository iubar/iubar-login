{% set title = 'Password dimenticata' %}
{% block content %}
<script type="text/javascript" src="https://www.google.com/recaptcha/api.js?hl=it" async defer></script>
<script type="text/javascript">
	app.controller('PasswordResetCtrl', ['$scope', function ($scope) {}]);	
</script>
<div class="container" ng-controller="PasswordResetCtrl">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<h1 class="text-center">
				<a href="{{ baseUrl() }}" style="color: #000;"><b>Fattura</b>Tutto</a>
			</h1>
			{% include 'app/login/feedback_messages.twig' %}
			<form method="post" action="{{ baseUrl() }}/login/new-password" name="form" novalidate>
				<input type="hidden" name="user_name" value="{{ user_name }}" />
            	<input type="hidden" name="user_password_reset_hash" value="{{ user_password_reset_hash }}" />
            
            	<div class="form-group" {{ ngValidationClass('user_password_new') }}>
            		<label for="user_password_new">Nuova password</label>
					<{{ passwordfield('user_password_new') }} ng-model="user_password_new" ng-minlength="6" ng-maxlength="20" ng-pattern="alpha">		
		    		{{ validationMsg('user_password_new', 6, 20, 'alpha') }}  	
				</div>
				
				<div class="form-group" {{ ngValidationClass('user_password_repeat') }}>
            		<label for="user_password_new">Ripeti nuova password</label>
					<{{ passwordfield('user_password_repeat') }} ng-model="user_password_repeat" ng-minlength="6" ng-maxlength="20" ng-pattern="alpha">		
		    		{{ validationMsg('user_password_repeat', 6, 20, 'alpha') }}  	
				</div>
			   	<div class="text-center">      		
			  		<button type="submit" class="btn btn-block btn-flat btn-success" ng-disabled="form.$invalid">Conferma</button>
			   	</div>
			</form>
		</div>
		<div class="col-md-3"></div>
	</div>
</div>
{% endblock %}